{
    "mcpServers": {
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "./data"
            ],
            "env": {
                "ALLOWED_DIRECTORIES": "./data"
            }
        },
        "playwright": {
            "command": "npx",
            "args": [
                "-y",
                "@playwright/mcp@latest",
                "--headless",
                "--browser",
                "chromium"
            ],
            "env": {}
        }
    }
}